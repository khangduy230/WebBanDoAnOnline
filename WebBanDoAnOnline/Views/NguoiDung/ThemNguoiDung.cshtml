@{
    ViewBag.Title = "Thêm mới Người dùng";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}
<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0 text-primary fw-bold">Thêm mới tài khoản</h5>
        </div>
        <div class="card-body">
            <!-- Form thêm mới -->
            <form id="form-add-user">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="txt_HoTen" id="txt_HoTen" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tên tài khoản <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="txt_TenTK" id="txt_TenTK" placeholder="Viết liền không dấu" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" name="txt_Email" id="txt_Email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" name="txt_SoDienThoai" id="txt_SoDienThoai" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" name="txt_MatKhau" id="txt_MatKhau" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="txt_MatKhau_Confirm" required />
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="form-label">Vai trò</label>
                                <select name="slc_VaiTro" id="slc_VaiTro" class="form-select">
                                    <option value="NhanVien" selected>Nhân viên</option>
                                    <option value="KhachHang">Khách hàng</option>
                                    <option value="QuanLy">Quản lý</option>
                                </select>
                            </div>
                            <div class="col-6 mb-3">
                                <label class="form-label">Trạng thái</label>
                                <select name="slc_TrangThai" id="slc_TrangThai" class="form-select">
                                    <option value="HoatDong" selected>Hoạt động</option>
                                    <option value="BiKhoa">Bị khóa</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="d-flex justify-content-end gap-2">
                    <a href="@Url.Action("LayNguoiDung", "NguoiDung")" class="btn btn-secondary">Quay lại</a>
                    <button type="button" id="btn_them" class="btn btn-success">Lưu lại</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        $("#btn_them").click(function () {
            // 1. Lấy giá trị
            var hoTen = $("#txt_HoTen").val().trim();
            var tenTK = $("#txt_TenTK").val().trim();
            var email = $("#txt_Email").val().trim();
            var phone = $("#txt_SoDienThoai").val().trim();
            var pass = $("#txt_MatKhau").val();
            var rePass = $("#txt_MatKhau_Confirm").val();

            // 2. Validate dữ liệu trống
            if (hoTen === "" || tenTK === "" || email === "" || pass === "") {
                alert("Vui lòng nhập đầy đủ thông tin bắt buộc (*)");
                return;
            }

            // 3. Validate Email (Regex chuẩn)
            var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!emailRegex.test(email)) {
                alert("Email không đúng định dạng (VD: abc@gmail.com)");
                return;
            }

            // 4. Validate Số điện thoại (Chỉ số, 10-11 số, đầu số 0)
            var phoneRegex = /^(0)[0-9]{9,10}$/;
            if (!phoneRegex.test(phone)) {
                alert("Số điện thoại không hợp lệ (Phải bắt đầu bằng 0 và có 10-11 số)");
                return;
            }

            // 5. Validate Mật khẩu
            if (pass !== rePass) {
                alert("Mật khẩu xác nhận không khớp!");
                return;
            }

            // 6. Validate Tên tài khoản (Không dấu, không khoảng trắng)
            var usernameRegex = /^[a-zA-Z0-9]+$/;
            if (!usernameRegex.test(tenTK)) {
                 alert("Tên tài khoản chỉ được chứa chữ cái và số, không khoảng trắng/ký tự đặc biệt.");
                 return;
            }

            // 7. Gửi AJAX
            var formData = new FormData($('#form-add-user')[0]);

            $.ajax({
                type: "POST",
                url: '@Url.Action("Insert", "NguoiDung")', // 
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    alert(res);
                    if (res.toLowerCase().includes("thành công")) {
                        window.location.href = '@Url.Action("LayNguoiDung", "NguoiDung")';
                    }
                },
                error: function (err) {
                    console.log(err);
                    alert("Lỗi kết nối server: " + err.statusText);
                }
            });
        });
    });
</script>
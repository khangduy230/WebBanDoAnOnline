@model WebBanDoAnOnline.Models.TaiKhoanViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml"; // Đảm bảo đúng đường dẫn
}

<div class="auth-form-container">
    <div class="auth-logo">
        <span class="logo-bold fst-italic">FuTho</span>
        <span class="logo-regular">Food</span>
    </div>
    <h2>Chào mừng bạn trở lại</h2>

    @if (TempData["RegisterSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["RegisterSuccess"]
        </div>
    }
    
    @using (Html.BeginForm("Login", "TaiKhoan", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "auth-form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.TaiKhoan, "Tài khoản")
            @Html.TextBoxFor(m => m.TaiKhoan, new { @class = "form-control", placeholder = "Email, SĐT hoặc Tên tài khoản" })
            @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MatKhau, "Mật khẩu")
            <div class="password-wrapper">
                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                <i class="fas fa-eye-slash toggle-password"></i>
            </div>
            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
        </div>
        
        <a href="#" class="forgot-password-link">Quên mật khẩu?</a>

        <button type="submit" class="btn btn-auth-primary">Đăng nhập</button>
        
        @Html.ActionLink("Đăng ký", "Register", "TaiKhoan", null, new { @class = "btn btn-auth-secondary" })
    }
</div>
@using System.Web
@{
    ViewBag.Title = "Kết quả tìm kiếm";
    var q = (string)(ViewBag.Q ?? "");
    var page = (int)(ViewBag.Page ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var totalItems = (int)(ViewBag.TotalItems ?? 0);
}

<section class="container my-4">
    <div class="search-hero">
        <div class="search-title">Kết quả tìm kiếm cho</div>
        <div class="search-keyword">@q</div>
    </div>

    @if (totalItems == 0)
    {
        <div class="p-4 bg-white border rounded-3 text-center text-muted">
            Không tìm thấy sản phẩm phù hợp với từ khóa "<b>@q</b>".
        </div>
    }
    else
    {
        @Html.Partial("_Products")

        if (page < totalPages)
        {
            <div class="mt-3 d-flex justify-content-end">
                <a class="search-see-more" href="@Url.Action("Search", "Menu", new { q = q, page = page + 1, pageSize = ViewBag.PageSize })">
                    Xem thêm >>
                </a>
            </div>
        }
    }
</section>
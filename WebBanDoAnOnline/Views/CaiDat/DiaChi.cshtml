@{
    ViewBag.Title = "Địa chỉ";
    Layout = "~/Views/Shared/_LayoutCaiDat.cshtml";
}

<style>
    .address-card {
        background: #fff;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 15px;
        transition: all 0.3s ease;
        position: relative;
    }

        .address-card:hover {
            border-color: #F58634;
            box-shadow: 0 4px 12px rgba(245, 134, 52, 0.15);
        }

        .address-card.default {
            border-color: #F58634;
            background-color: #fff8f0;
        }

    .default-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background-color: #F58634;
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .address-info {
        margin-bottom: 12px;
    }

        .address-info strong {
            color: #333;
            font-weight: 600;
            display: block;
            margin-bottom: 4px;
        }

        .address-info span {
            color: #6c757d;
        }

    .address-actions {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn-address {
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.9rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #F58634;
        color: white;
    }

        .btn-edit:hover {
            background-color: #e67e00;
        }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .btn-set-default {
        background-color: #6c757d;
        color: white;
    }

        .btn-set-default:hover {
            background-color: #5a6268;
        }

    .btn-add-new {
        background-color: #F58634;
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 20px;
    }

        .btn-add-new:hover {
            background-color: #e67e00;
        }

    /* Modal styles */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1050;
        align-items: center;
        justify-content: center;
    }

        .modal-overlay.show {
            display: flex;
        }

    .modal-content {
        width: 500px;
        max-width: 90%;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        padding: 24px;
        max-height: 90vh;
        overflow-y: auto;
    }

    .modal-header {
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

        .modal-header h3 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 700;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            box-sizing: border-box;
        }

            .form-group input:focus,
            .form-group textarea:focus {
                outline: none;
                border-color: #F58634;
            }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

    .form-check {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
    }

        .form-check input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .form-check label {
            margin: 0;
            cursor: pointer;
        }

    .modal-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 20px;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-weight: 500;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }

    .btn-save {
        background-color: #F58634;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-weight: 500;
    }

        .btn-save:hover {
            background-color: #e67e00;
        }
</style>

<h4 class="mb-4">Địa chỉ nhận hàng</h4>

<button class="btn-add-new" onclick="openModal()">
    <i class="fas fa-plus"></i> Thêm địa chỉ mới
</button>

<div id="address-list">
    <div class="text-center py-5">
        <span class="spinner-border text-warning"></span>
        <p class="mt-2 text-muted">Đang tải...</p>
    </div>
</div>

<!-- Modal thêm/sửa địa chỉ -->
<div class="modal-overlay" id="modalOverlay">
    <div class="modal-content" id="modalContent">
        <div class="modal-header">
            <h3 id="modalTitle">Thêm địa chỉ mới</h3>
        </div>
        <form id="addressForm">
            <input type="hidden" id="maDC" name="MaDC">

            <div class="form-group">
                <label for="tenNguoiNhan">Họ và tên <span class="text-danger">*</span></label>
                <input type="text" id="tenNguoiNhan" name="TenNguoiNhan" placeholder="Nguyễn Văn A" required>
            </div>

            <div class="form-group">
                <label for="sdt">Số điện thoại <span class="text-danger">*</span></label>
                <input type="tel" id="sdt" name="SDT" placeholder="0987654321" required>
            </div>

            <div class="form-group">
                <label for="diaChi">Địa chỉ chi tiết <span class="text-danger">*</span></label>
                <textarea id="diaChi" name="DiaChi" placeholder="Số nhà, tên đường, phường/xã, quận/huyện, tỉnh/thành phố" required></textarea>
            </div>

            <div class="form-check">
                <input type="checkbox" id="macDinh" name="MacDinh">
                <label for="macDinh">Đặt làm địa chỉ mặc định</label>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-cancel" onclick="closeModal()">Hủy</button>
                <button type="submit" class="btn-save">Lưu</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var url_domain = window.location.origin;
        var isEditMode = false;

        $(document).ready(function () {
            loadAddressList();

            $('#addressForm').submit(function (e) {
                e.preventDefault();
                saveAddress();
            });

            // CHỈ ĐÓNG MODAL KHI CLICK VÀO OVERLAY (KHÔNG PHẢI MODAL-CONTENT)
            $('#modalOverlay').on('click', function (e) {
                if (e.target.id === 'modalOverlay') {
                    closeModal();
                }
            });

            //  NGĂN SỰ KIỆN CLICK TỪ MODAL-CONTENT LAN RA OVERLAY
            $('#modalContent').on('click', function (e) {
                e.stopPropagation();
            });
        });

        // Load danh sách địa chỉ
        function loadAddressList() {
            $.ajax({
                type: "POST",
                url: url_domain + '/CaiDat/GetDiaChi',
                contentType: false,
                processData: false,
                cache: false,
                success: function (response) {
                    var res = (typeof response === 'string') ? JSON.parse(response) : response;
                    if (res.success) {
                        renderAddressList(res.data);
                    } else {
                        $('#address-list').html('<div class="alert alert-danger">' + res.message + '</div>');
                    }
                },
                error: function () {
                    $('#address-list').html('<div class="alert alert-danger">Lỗi khi tải danh sách địa chỉ</div>');
                }
            });
        }

        // Hiển thị danh sách địa chỉ
        function renderAddressList(data) {
            if (data.length === 0) {
                $('#address-list').html('<div class="text-center py-4 text-muted">Chưa có địa chỉ nào</div>');
                return;
            }

            var html = '';
            for (var i = 0; i < data.length; i++) {
                var addr = data[i];
                var defaultClass = addr.MacDinh ? 'default' : '';
                var defaultBadge = addr.MacDinh ? '<span class="default-badge">Mặc định</span>' : '';
                var setDefaultBtn = !addr.MacDinh ? '<button class="btn-address btn-set-default" onclick="setDefault(' + addr.MaDC + ')"><i class="fas fa-star"></i> Đặt mặc định</button>' : '';

                html += `
                                    <div class="address-card ${defaultClass}">
                                        ${defaultBadge}
                                        <div class="address-info">
                                            <strong>${addr.TenNguoiNhan}</strong>
                                            <span>SĐT: ${addr.SDT}</span>
                                        </div>
                                        <div class="address-info">
                                            <span>${addr.DiaChi}</span>
                                        </div>
                                        <div class="address-actions">
                                            <button class="btn-address btn-edit" onclick='editAddress(${JSON.stringify(addr)})'>
                                                <i class="fas fa-edit"></i> Cập nhật
                                            </button>
                                            ${setDefaultBtn}
                                            <button class="btn-address btn-delete" onclick="deleteAddress(${addr.MaDC})">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </div>
                                    </div>
                                `;
            }
            $('#address-list').html(html);
        }


        function openModal() {
            isEditMode = false;
            $('#modalTitle').text('Thêm địa chỉ mới');
            $('#addressForm')[0].reset();
            $('#maDC').val('');

            $('#modalOverlay').addClass('show');

            setTimeout(function () {
                $('#tenNguoiNhan').focus();
            }, 300);
        }

        function closeModal() {
            $('#modalOverlay').removeClass('show');
        }


        function editAddress(addr) {
            isEditMode = true;
            $('#modalTitle').text('Cập nhật địa chỉ');
            $('#maDC').val(addr.MaDC);
            $('#tenNguoiNhan').val(addr.TenNguoiNhan);
            $('#sdt').val(addr.SDT);
            $('#diaChi').val(addr.DiaChi);
            $('#macDinh').prop('checked', addr.MacDinh);

            $('#modalOverlay').addClass('show');
        }

        function saveAddress() {
            var formData = new FormData($('#addressForm')[0]);
            formData.append('MacDinh', $('#macDinh').is(':checked'));

            var url = isEditMode ? '/CaiDat/SuaDiaChi' : '/CaiDat/ThemDiaChi';

            $.ajax({
                type: "POST",
                url: url_domain + url,
                data: formData,
                contentType: false,
                processData: false,
                cache: false,
                success: function (response) {
                    var res = (typeof response === 'string') ? JSON.parse(response) : response;
                    if (res.success) {
                        alert(res.message);
                        closeModal();
                        loadAddressList();
                    } else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert('Lỗi kết nối server');
                }
            });
        }

        // Đặt địa chỉ mặc định
        function setDefault(maDC) {
            if (!confirm('Đặt làm địa chỉ mặc định?')) return;

            var formData = new FormData();
            formData.append('MaDC', maDC);
            formData.append('MacDinh', 'true');

            $.ajax({
                type: "POST",
                url: url_domain + '/CaiDat/SuaDiaChi',
                data: formData,
                contentType: false,
                processData: false,
                cache: false,
                success: function (response) {
                    var res = (typeof response === 'string') ? JSON.parse(response) : response;
                    if (res.success) {
                        loadAddressList();
                    } else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert('Lỗi kết nối server');
                }
            });
        }

        function deleteAddress(maDC) {
            if (!confirm('Bạn có chắc muốn xóa địa chỉ này?')) return;

            var formData = new FormData();
            formData.append('MaDC', maDC);

            $.ajax({
                type: "POST",
                url: url_domain + '/CaiDat/XoaDiaChi',
                data: formData,
                contentType: false,
                processData: false,
                cache: false,
                success: function (response) {
                    var res = (typeof response === 'string') ? JSON.parse(response) : response;
                    if (res.success) {
                        alert(res.message);
                        loadAddressList();
                    } else {
                        alert(res.message);
                    }
                },
                error: function () {
                    alert('Lỗi kết nối server');
                }
            });
        }
    </script>
}
@{
    ViewBag.Title = "Đơn mua";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .settings-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .settings-sidebar {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .settings-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .settings-menu li {
            margin-bottom: 5px;
        }

        .settings-menu a {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: #333;
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s;
        }

            .settings-menu a:hover {
                background: #f9f9f9;
                color: #F58634;
            }

            .settings-menu a.active {
                background: #FFF3E0;
                color: #F58634;
                font-weight: 600;
            }

            .settings-menu a i {
                width: 24px;
                margin-right: 12px;
                font-size: 18px;
            }

    .settings-content {
        background: white;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    /* Progress Timeline Styles */
    .order-timeline {
        position: relative;
        padding: 30px 0;
        margin-bottom: 30px;
    }

    .timeline-container {
        display: flex;
        justify-content: space-between;
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }

    .timeline-line {
        position: absolute;
        top: 30px;
        left: 10%;
        right: 10%;
        height: 4px;
        background: #e0e0e0;
        z-index: 0;
    }

    .timeline-progress {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        background: linear-gradient(90deg, #F58634, #ff9d4d);
        transition: width 0.5s ease;
        border-radius: 2px;
    }

    .timeline-step {
        flex: 1;
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .timeline-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: white;
        border: 4px solid #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 12px;
        font-size: 24px;
        color: #999;
        transition: all 0.3s ease;
        position: relative;
    }

    .timeline-step.active .timeline-icon {
        border-color: #F58634;
        background: #FFF3E0;
        color: #F58634;
        box-shadow: 0 4px 12px rgba(245, 134, 52, 0.3);
        animation: pulse 2s infinite;
    }

    .timeline-step.completed .timeline-icon {
        border-color: #4CAF50;
        background: #4CAF50;
        color: white;
    }

    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 4px 12px rgba(245, 134, 52, 0.3);
        }

        50% {
            box-shadow: 0 4px 20px rgba(245, 134, 52, 0.5);
        }
    }

    .timeline-label {
        font-size: 13px;
        color: #666;
        font-weight: 500;
        line-height: 1.4;
    }

    .timeline-step.active .timeline-label {
        color: #F58634;
        font-weight: 600;
    }

    .timeline-step.completed .timeline-label {
        color: #4CAF50;
    }

    .timeline-time {
        font-size: 11px;
        color: #999;
        margin-top: 4px;
    }

    /* Order Card Styles */
    .order-card {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        transition: box-shadow 0.3s;
    }

        .order-card:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 2px dashed #e0e0e0;
    }

    .order-code {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

        .order-code strong {
            font-size: 16px;
            color: #333;
        }

        .order-code small {
            color: #666;
            font-size: 12px;
        }

    .status-badge {
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .status-badge.pending {
            background: #FFF3E0;
            color: #F58634;
        }

        .status-badge.confirmed {
            background: #E3F2FD;
            color: #2196F3;
        }

        .status-badge.shipping {
            background: #F3E5F5;
            color: #9C27B0;
        }

        .status-badge.completed {
            background: #E8F5E9;
            color: #4CAF50;
        }

        .status-badge.cancelled {
            background: #FFEBEE;
            color: #F44336;
        }

    /* Order Info Grid */
    .order-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 20px;
        padding: 16px;
        background: #f9f9f9;
        border-radius: 8px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .info-label {
        font-size: 12px;
        color: #666;
        font-weight: 500;
    }

    .info-value {
        font-size: 14px;
        color: #333;
        font-weight: 600;
    }

    /* Product List */
    .product-list {
        margin-bottom: 20px;
    }

    .product-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .product-item:last-child {
            border-bottom: none;
        }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
    }

    .product-info {
        flex: 1;
    }

    .product-name {
        font-size: 15px;
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
    }

    .product-quantity {
        font-size: 13px;
        color: #666;
    }

    .product-price {
        text-align: right;
        font-size: 16px;
        font-weight: 700;
        color: #F58634;
    }

    /* Order Total */
    .order-total {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 16px;
        border-top: 2px solid #e0e0e0;
        margin-top: 16px;
    }

    .total-label {
        font-size: 16px;
        color: #666;
        font-weight: 500;
    }

    .total-amount {
        font-size: 24px;
        font-weight: 700;
        color: #F58634;
    }

    /* Filter Tabs */
    .filter-tabs {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
        overflow-x: auto;
        padding-bottom: 8px;
        border-bottom: 2px solid #e0e0e0;
    }

    .filter-tab {
        padding: 10px 24px;
        border: none;
        background: transparent;
        cursor: pointer;
        white-space: nowrap;
        transition: all 0.3s;
        font-weight: 500;
        color: #666;
        position: relative;
        border-radius: 8px 8px 0 0;
    }

        .filter-tab:hover {
            background: #f5f5f5;
            color: #333;
        }

        .filter-tab.active {
            color: #F58634;
            font-weight: 600;
        }

            .filter-tab.active::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                right: 0;
                height: 3px;
                background: #F58634;
            }

        .filter-tab .badge {
            background: #F58634;
            color: white;
            border-radius: 12px;
            padding: 2px 8px;
            font-size: 11px;
            margin-left: 6px;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #999;
    }

        .empty-state i {
            font-size: 80px;
            margin-bottom: 24px;
            opacity: 0.3;
        }

        .empty-state h5 {
            color: #666;
            margin-bottom: 12px;
        }

        .empty-state p {
            color: #999;
            margin-bottom: 24px;
        }

    .btn-shop-now {
        background: #F58634;
        color: white;
        padding: 12px 32px;
        border-radius: 24px;
        text-decoration: none;
        display: inline-block;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-shop-now:hover {
            background: #e67e00;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 134, 52, 0.3);
        }

    /* Action Buttons */
    .order-actions {
        display: flex;
        gap: 12px;
        margin-top: 16px;
    }

    .btn-action {
        flex: 1;
        padding: 10px 20px;
        border-radius: 8px;
        border: 2px solid #e0e0e0;
        background: white;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-action:hover {
            border-color: #F58634;
            color: #F58634;
        }

        .btn-action.primary {
            background: #F58634;
            color: white;
            border-color: #F58634;
        }

            .btn-action.primary:hover {
                background: #e67e00;
            }

        .btn-action.cancel {
            background: #FFEBEE;
            color: #F44336;
            border-color: #F44336;
        }

            .btn-action.cancel:hover {
                background: #F44336;
                color: white;
            }

    /* Responsive */
    @@media (max-width: 768px) {
        .timeline-container {
            flex-direction: column;
            gap: 24px;
        }

        .timeline-line {
            left: 30px;
            right: auto;
            width: 4px;
            height: calc(100% - 60px);
            top: 30px;
        }

        .timeline-step {
            display: flex;
            align-items: center;
            text-align: left;
            gap: 16px;
        }

        .timeline-icon {
            margin: 0;
        }

        .order-info-grid {
            grid-template-columns: 1fr;
        }

        .filter-tabs {
            gap: 8px;
        }

        .filter-tab {
            padding: 8px 16px;
            font-size: 13px;
        }
    }
</style>


@{
    ViewBag.Title = "Đơn mua";
    Layout = "~/Views/Shared/_LayoutCaiDat.cshtml";
}

<style>
    /* Progress Timeline Styles */
    .order-timeline {
        position: relative;
        padding: 30px 0;
        margin-bottom: 30px;
    }

    .timeline-container {
        display: flex;
        justify-content: space-between;
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }

    .timeline-line {
        position: absolute;
        top: 30px;
        left: 10%;
        right: 10%;
        height: 4px;
        background: #e0e0e0;
        z-index: 0;
    }

    .timeline-progress {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        background: linear-gradient(90deg, #F58634, #ff9d4d);
        transition: width 0.5s ease;
        border-radius: 2px;
    }

    .timeline-step {
        flex: 1;
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .timeline-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: white;
        border: 4px solid #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 12px;
        font-size: 24px;
        color: #999;
        transition: all 0.3s ease;
        position: relative;
    }

    .timeline-step.active .timeline-icon {
        border-color: #F58634;
        background: #FFF3E0;
        color: #F58634;
        box-shadow: 0 4px 12px rgba(245, 134, 52, 0.3);
        animation: pulse 2s infinite;
    }

    .timeline-step.completed .timeline-icon {
        border-color: #4CAF50;
        background: #4CAF50;
        color: white;
    }

    @@keyframes pulse {
        0%, 100% {
            box-shadow: 0 4px 12px rgba(245, 134, 52, 0.3);
        }

        50% {
            box-shadow: 0 4px 20px rgba(245, 134, 52, 0.5);
        }
    }

    .timeline-label {
        font-size: 13px;
        color: #666;
        font-weight: 500;
        line-height: 1.4;
    }

    .timeline-step.active .timeline-label {
        color: #F58634;
        font-weight: 600;
    }

    .timeline-step.completed .timeline-label {
        color: #4CAF50;
    }

    .timeline-time {
        font-size: 11px;
        color: #999;
        margin-top: 4px;
    }

    /* Order Card Styles */
    .order-card {
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 24px;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        transition: box-shadow 0.3s;
    }

        .order-card:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 2px dashed #e0e0e0;
    }

    .order-code {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

        .order-code strong {
            font-size: 16px;
            color: #333;
        }

        .order-code small {
            color: #666;
            font-size: 12px;
        }

    .status-badge {
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .status-badge.pending {
            background: #FFF3E0;
            color: #F58634;
        }

        .status-badge.shipping {
            background: #E3F2FD;
            color: #2196F3;
        }

        .status-badge.delivering {
            background: #F3E5F5;
            color: #9C27B0;
        }

        .status-badge.completed {
            background: #E8F5E9;
            color: #4CAF50;
        }

        .status-badge.cancelled {
            background: #FFEBEE;
            color: #F44336;
        }

    /* Order Info Grid */
    .order-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 20px;
        padding: 16px;
        background: #f9f9f9;
        border-radius: 8px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .info-label {
        font-size: 12px;
        color: #666;
        font-weight: 500;
    }

    .info-value {
        font-size: 14px;
        color: #333;
        font-weight: 600;
    }

    /* Product List */
    .product-list {
        margin-bottom: 20px;
    }

    .product-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .product-item:last-child {
            border-bottom: none;
        }

    .product-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
    }

    .product-info {
        flex: 1;
    }

    .product-name {
        font-size: 15px;
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
    }

    .product-quantity {
        font-size: 13px;
        color: #666;
    }

    .product-price {
        text-align: right;
        font-size: 16px;
        font-weight: 700;
        color: #F58634;
    }

    /* Order Total */
    .order-total {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 16px;
        border-top: 2px solid #e0e0e0;
        margin-top: 16px;
    }

    .total-label {
        font-size: 16px;
        color: #666;
        font-weight: 500;
    }

    .total-amount {
        font-size: 24px;
        font-weight: 700;
        color: #F58634;
    }

    /* Filter Tabs */
    .filter-tabs {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
        overflow-x: auto;
        padding-bottom: 8px;
        border-bottom: 2px solid #e0e0e0;
    }

    .filter-tab {
        padding: 10px 24px;
        border: none;
        background: transparent;
        cursor: pointer;
        white-space: nowrap;
        transition: all 0.3s;
        font-weight: 500;
        color: #666;
        position: relative;
        border-radius: 8px 8px 0 0;
    }

        .filter-tab:hover {
            background: #f5f5f5;
            color: #333;
        }

        .filter-tab.active {
            color: #F58634;
            font-weight: 600;
        }

            .filter-tab.active::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                right: 0;
                height: 3px;
                background: #F58634;
            }

        .filter-tab .badge {
            background: #F58634;
            color: white;
            border-radius: 12px;
            padding: 2px 8px;
            font-size: 11px;
            margin-left: 6px;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #999;
    }

        .empty-state i {
            font-size: 80px;
            margin-bottom: 24px;
            opacity: 0.3;
        }

        .empty-state h5 {
            color: #666;
            margin-bottom: 12px;
        }

        .empty-state p {
            color: #999;
            margin-bottom: 24px;
        }

    .btn-shop-now {
        background: #F58634;
        color: white;
        padding: 12px 32px;
        border-radius: 24px;
        text-decoration: none;
        display: inline-block;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-shop-now:hover {
            background: #e67e00;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 134, 52, 0.3);
        }

    /* Action Buttons */
    .order-actions {
        display: flex;
        gap: 12px;
        margin-top: 16px;
    }

    .btn-action {
        flex: 1;
        padding: 10px 20px;
        border-radius: 8px;
        border: 2px solid #e0e0e0;
        background: white;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-action:hover {
            border-color: #F58634;
            color: #F58634;
        }

        .btn-action.primary {
            background: #F58634;
            color: white;
            border-color: #F58634;
        }

            .btn-action.primary:hover {
                background: #e67e00;
            }

    /* Responsive */
    @@media (max-width: 768px) {
        .timeline-container {
            flex-direction: column;
            gap: 24px;
        }

        .timeline-line {
            left: 30px;
            right: auto;
            width: 4px;
            height: calc(100% - 60px);
            top: 30px;
        }

        .timeline-step {
            display: flex;
            align-items: center;
            text-align: left;
            gap: 16px;
        }

        .timeline-icon {
            margin: 0;
        }

        .order-info-grid {
            grid-template-columns: 1fr;
        }

        .filter-tabs {
            gap: 8px;
        }

        .filter-tab {
            padding: 8px 16px;
            font-size: 13px;
        }
    }
</style>

<h4 class="mb-4">Đơn mua của tôi</h4>

// Bộ lọc trạng thái đơn hàng
<div class="filter-tabs">
    <button class="filter-tab active" data-status="all">
        <i class="fas fa-list"></i> Tất cả
    </button>
    <button class="filter-tab" data-status="pending">
        <i class="fas fa-clock"></i> Chờ xác nhận
    </button>
    <button class="filter-tab" data-status="shipping">
        <i class="fas fa-shipping-fast"></i> Đang giao
    </button>
    <button class="filter-tab" data-status="completed">
        <i class="fas fa-check-circle"></i> Hoàn thành
    </button>
    <button class="filter-tab" data-status="cancelled">
        <i class="fas fa-times-circle"></i> Đã hủy
    </button>
</div>

// Danh sách đơn hàng sẽ được load vào đây
<div id="order-list">
    <div class="text-center py-5">
        <div class="spinner-border text-warning" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var currentStatus = 'all';

        $(document).ready(function () {
            loadOrders(currentStatus);

            $('.filter-tab').click(function () {
                $('.filter-tab').removeClass('active');
                $(this).addClass('active');
                currentStatus = $(this).data('status');
                loadOrders(currentStatus);
            });
        });

        function loadOrders(status) {
            var formData = new FormData();
            formData.append('status', status);

            $.ajax({
                type: "POST",
                url: '@Url.Action("GetOrders", "CaiDat")',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    var res = JSON.parse(response);
                    if (res.success) {
                        renderOrders(res.data);
                    } else {
                        $('#order-list').html('<div class="alert alert-danger text-center">' + res.message + '</div>');
                    }
                },
                error: function () {
                    $('#order-list').html('<div class="alert alert-danger text-center">Lỗi kết nối server</div>');
                }
            });
        }


        function renderOrders(orders) {
            var html = '';

            if (orders.length === 0) {
                html = `
                    <div class="empty-state">
                        <i class="fas fa-shopping-bag"></i>
                        <h5>Không có đơn hàng nào</h5>
                        <p>Hãy khám phá và đặt món ngon ngay thôi!</p>
                        <a href="/" class="btn-shop-now">
                            <i class="fas fa-utensils"></i> Đặt món ngay
                        </a>
                    </div>
                `;
            } else {
                orders.forEach(function (order) {
                    var statusInfo = getStatusInfo(order.TrangThai);
                    var timelineData = getTimelineSteps(order.TrangThai);

                    // Xử lý đặc biệt cho đơn Hủy: Thanh timeline chuyển sang màu đỏ
                    let progressColor = (order.TrangThai === 'Đã hủy') ? 'background: #dc3545;' : '';

                    html += `
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-code">
                                    <strong>Mã đơn: ${order.MaDH}</strong>
                                    <small><i class="far fa-calendar"></i> ${order.NgayTao}</small>
                                </div>
                                <span class="status-badge ${statusInfo.class}">
                                    <i class="${statusInfo.icon}"></i> ${statusInfo.text}
                                </span>
                            </div>

                            <!-- Timeline -->
                            <div class="order-timeline">
                                <div class="timeline-container">
                                    <div class="timeline-line">
                                        <div class="timeline-progress" style="width: ${timelineData.progress}%; ${progressColor}"></div>
                                    </div>
                                    ${timelineData.steps.map(step => `
                                        <div class="timeline-step ${step.class}">
                                            <div class="timeline-icon">
                                                <i class="${step.icon}"></i>
                                            </div>
                                            <div class="timeline-label">${step.label}</div>
                                        </div>
                                    `).join('')}
                                </div>
                            </div>

                            <div class="order-info-grid">
                                <div class="info-item">
                                    <span class="info-label"><i class="fas fa-map-marker-alt"></i> Địa chỉ giao hàng</span>
                                    <span class="info-value" style="white-space: pre-line;">${order.DiaChiGiaoHang}</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label"><i class="fas fa-box"></i> Số lượng</span>
                                    <span class="info-value">${order.SanPhams.length} món</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label"><i class="fas fa-money-bill-wave"></i> Tổng tiền</span>
                                    <span class="info-value text-danger fs-5">${formatCurrency(order.TongTien)}đ</span>
                                </div>
                            </div>

                            <div class="product-list">
                                ${order.SanPhams.map(sp => `
                                    <div class="product-item">
                                        <img src="${sp.Anh}" class="product-img" onerror="this.src='/img/no-image.jpg'">
                                        <div class="product-info">
                                            <div class="product-name">${sp.TenSP}</div>
                                            <div class="product-quantity">x${sp.SoLuong}</div>
                                        </div>
                                        <div class="product-price">
                                            ${formatCurrency(sp.DonGia)}đ
                                        </div>
                                    </div>
                                `).join('')}
                            </div>

                            <div class="order-actions">
                                ${getActionButtons(order.TrangThai, order.MaDH)}
                            </div>
                        </div>
                    `;
                });
            }

            $('#order-list').html(html);
        }

        //  HÀM XỬ LÝ TRẠNG THÁI
        function getStatusInfo(trangThai) {

            switch (trangThai) {
                case 'Chờ xác nhận':
                    return { class: 'pending', icon: 'fas fa-clock', text: 'Chờ xác nhận' };
                case 'Đã xác nhận':
                    return { class: 'shipping', icon: 'fas fa-box', text: 'Đã xác nhận' };
                case 'Đang giao':
                    return { class: 'shipping', icon: 'fas fa-shipping-fast', text: 'Đang giao hàng' };
                case 'Đã nhận hàng':
                    return { class: 'completed', icon: 'fas fa-check-circle', text: 'Đã hoàn thành' };
                case 'Đã hủy':
                    return { class: 'cancelled', icon: 'fas fa-times-circle', text: 'Đã hủy' };
                default:
                    return { class: 'pending', icon: 'fas fa-info-circle', text: trangThai };
            }
        }

        // HÀM TẠO TIMELINE THEO TRẠNG THÁI
        function getTimelineSteps(trangThai) {

            var steps = [
                { icon: 'fas fa-file-invoice', label: 'Đã đặt', class: 'completed' },
                { icon: 'fas fa-user-check', label: 'Đã xác nhận', class: '' },
                { icon: 'fas fa-motorcycle', label: 'Đang giao', class: '' },
                { icon: 'fas fa-star', label: 'Hoàn thành', class: '' }
            ];

            var progress = 0;

            if (trangThai === 'Đã hủy') {
                // Nếu hủy: Chỉ hiện bước đầu + bước hủy
                return {
                    steps: [
                        { icon: 'fas fa-file-invoice', label: 'Đã đặt', class: 'completed' },
                        { icon: 'fas fa-times', label: 'Đã hủy', class: 'active cancelled' }
                    ],
                    progress: 100
                };
            }

            // Logic thanh tiến trình
            switch (trangThai) {
                case 'Chờ xác nhận':
                    steps[0].class = 'active';
                    progress = 15;
                    break;
                case 'Đã xác nhận':
                    steps[0].class = 'completed';
                    steps[1].class = 'active';
                    progress = 50;
                    break;
                case 'Đang giao':
                    steps[0].class = 'completed';
                    steps[1].class = 'completed';
                    steps[2].class = 'active';
                    progress = 75;
                    break;
                case 'Đã nhận hàng':
                    steps.forEach(s => s.class = 'completed');
                    progress = 100;
                    break;
            }

            return { steps: steps, progress: progress };
        }

        function getActionButtons(trangThai, maDH) {
            var buttons = '';

            // CHỈ hiển thị nút Hủy khi trạng thái là "Chờ xác nhận"
            if (trangThai === 'Chờ xác nhận') {
                buttons = `
            <button class="btn-action text-danger border-danger" onclick="cancelOrder(${maDH})">
                <i class="fas fa-times-circle"></i> Hủy đơn hàng
            </button>`;
            }
            else if (trangThai === 'Đang giao') {
                buttons = `<button class="btn-action" disabled style="background:#eee; color:#888;">Đang vận chuyển...</button>`;
            }
            else if (trangThai === 'Đã nhận hàng') {
                buttons = `
            <button class="btn-action primary" onclick="reOrder(${maDH})">Mua lại</button>
            <button class="btn-action" onclick="alert('Chức năng đánh giá đang phát triển')">Đánh giá</button>
        `;
            }


            return buttons;
        }

        // Định dạng tiền tệ
        function formatCurrency(n) {
            return new Intl.NumberFormat('vi-VN').format(n);
        }

        function cancelOrder(id) {
            if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này không? Hành động này không thể hoàn tác.')) {

                var formData = new FormData();
                formData.append('id', id);

            }
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("HuyDonHang", "CaiDat")', 
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                var res = JSON.parse(response);
                if (res.success) {
                    alert(res.message);
                    // Load lại danh sách đơn hàng để cập nhật trạng thái mới
                    loadOrders(currentStatus);
                } else {
                    alert(res.message);
                }
            },
            error: function () {
                alert("Không thể kết nối đến server. Vui lòng thử lại sau.");
            },
            complete: function() {
                
            }
        });
    


        function reOrder(id) {
            
            window.location.href = '/SanPham/Index';
        }
    </script>
}
@model IEnumerable<WebBanDoAnOnline.Models.ThongBao>
@{
    ViewBag.Title = "Thông báo";
}

<section class="container my-4">
    <h2 class="fw-bold mb-4">Thông báo</h2>

    <div class="d-flex flex-column gap-3">
        @foreach (var n in Model)
        {
            <div class="p-3 rounded-3 bg-light border d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-start gap-3">
                    <div class="text-secondary fs-3"><i class="fas fa-bell"></i></div>
                    <div>
                        <div class="fw-semibold @(n.IsRead ? "text-secondary" : "text-dark")">@n.Title</div>
                        <div class="text-muted small">@n.Subtitle</div>
                    </div>
                </div>
                <div>
                    <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index","ThongBao")#@n.MaTB">Xem chi tiết</a>
                </div>
            </div>
        }
    </div>

    <div class="text-end mt-4">
        @using (Html.BeginForm("MarkAllAsRead", "ThongBao", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-warning">Đánh dấu đã đọc tất cả</button>
        }
    </div>
</section>
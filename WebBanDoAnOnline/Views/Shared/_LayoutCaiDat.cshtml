@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .settings-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .settings-sidebar {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .settings-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .settings-menu li {
            margin-bottom: 5px;
        }

        .settings-menu a {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: #333;
            text-decoration: none;
            border-radius: 6px;
            transition: all 0.3s;
        }

            .settings-menu a:hover {
                background: #f9f9f9;
                color: #F58634;
            }

            .settings-menu a.active {
                background: #FFF3E0;
                color: #F58634;
                font-weight: 600;
            }

            .settings-menu a i {
                width: 24px;
                margin-right: 12px;
                font-size: 18px;
            }

    .settings-content {
        background: white;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
</style>

<div class="container settings-container py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 mb-4">
            <div class="settings-sidebar">
                <ul class="settings-menu">
                    <li>
                        <a href="@Url.Action("HoSo", "CaiDat")" class="@(ViewContext.RouteData.Values["action"].ToString() == "HoSo" ? "active" : "")">
                            <i class="fas fa-user"></i>
                            <span>Hồ sơ</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("BaoMat", "CaiDat")" class="@(ViewContext.RouteData.Values["action"].ToString() == "BaoMat" ? "active" : "")">
                            <i class="fas fa-lock"></i>
                            <span>Bảo mật</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("DiaChi", "CaiDat")" class="@(ViewContext.RouteData.Values["action"].ToString() == "DiaChi" ? "active" : "")">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Địa chỉ</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("DonMua", "CaiDat")" class="@(ViewContext.RouteData.Values["action"].ToString() == "DonMua" ? "active" : "")">
                            <i class="fas fa-shopping-bag"></i>
                            <span>Đơn mua</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("KhuyenMai", "CaiDat")" class="@(ViewContext.RouteData.Values["action"].ToString() == "KhuyenMai" ? "active" : "")">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Khuyến mãi</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("XoaTaiKhoan", "CaiDat")" class="@(ViewContext.RouteData.Values["action"].ToString() == "XoaTaiKhoan" ? "active" : "")">
                            <i class="fas fa-user-slash"></i>
                            <span>Xóa tài khoản</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Content -->
        <div class="col-md-9">
            <div class="settings-content">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@RenderSection("Scripts", required: false)